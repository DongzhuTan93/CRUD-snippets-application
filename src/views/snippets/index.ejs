<div class="content-wrapper">
    <div class="snippets-container">
      <h1>Snippets</h1>
      
      <% if (viewData.snippets.length === 0) { %>
        <div class="empty-message">
          There are no snippets to display!
        </div>
      <% } else { %>
        <table class="snippets-table">
          <thead>
            <tr>
              <th>Snippet</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% viewData.snippets.forEach(snippet => { %>
              <tr>
                <td><%= snippet.description %></td>
                <td>
                  <div class="action-buttons">
                    <% if (viewData.authorized && viewData.userId === snippet.userId) { %>
                      <a href="/snippets/<%= snippet.id %>/update" class="btn-action btn-edit">Edit</a>
                      <a href="/snippets/<%= snippet.id %>/delete" class="btn-action btn-delete">Delete</a>
                    <% } %>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>